---
import { ArrowDownFromLine, FileArchive, FileCog } from "lucide-react";
import DownloadBtn from "@components/download-btn.astro";
import DownloadLink from "./download-link.astro";
---

<section class="px-5" id="download">
	<div
		class="w-full sm:max-w-7xl mx-auto relative bg-blue-600 shadow-[#b9b9b969] shadow-2xl mb-12 p-8 sm:p-10 rounded-[48px]">
		<div class="w-full flex justify-between items-center">
			<h1
				class="text-xl sm:text-2xl md:text-4xl font-semibold leading-none text-background-50">
				Download The Latest Version
			</h1>
			<svg
				viewBox="0 0 88 88"
				xmlns="http://www.w3.org/2000/svg"
				height="56"
				width="56"
				class="size-8 sm:size-12 md:size-14"
				><path
					d="m0 12.402 35.687-4.86.016 34.423-35.67.203zm35.67 33.529.028 34.453L.028 75.48.026 45.7zm4.326-39.025L87.314 0v41.527l-47.318.376zm47.329 39.349-.011 41.34-47.318-6.678-.066-34.739z"
					fill="#fff"></path></svg
			>
		</div>
		<p class="mt-4 sm:mt-1 text-background-50 text-base sm:text-lg md:text-2xl">
			compatible with windows vista, 7, 8, 9, 10 and 11
		</p>
		<p
			class="mt-1 sm:mt-4 mb-2 text-background-50 text-sm sm:text-base md:text-lg">
			downaload options
		</p>
		<div
			class="flex mb-8 gap-3 sm:gap-6 justify-start flex-col md:flex-row items-center w-full">
			<DownloadBtn
				fileName="#"
				variant="secondary"
				className="w-full md:w-auto justify-between">
				<FileCog size="18px" />
				download as Executable (.exe)
				<ArrowDownFromLine size="18px" />
			</DownloadBtn>
			<DownloadBtn
				fileName="#"
				variant="outline"
				className="w-full md:w-auto justify-between">
				<FileArchive size="18px" />
				download as Zip file
				<ArrowDownFromLine size="18px" />
			</DownloadBtn>
		</div>
		<h1
			class="text-xl sm:text-2xl md:text-3xl font-semibold leading-none text-background-50">
			Download Older Versions
		</h1>
		<div class="flex justify-start flex-wrap mt-3 gap-y-3 gap-x-6">
			<div class="space-y-1">
				<DownloadLink fileName="#" version="0.0.9" />
				<DownloadLink fileName="#" version="0.0.8" />
				<DownloadLink fileName="#" version="0.0.7" />
				<DownloadLink fileName="#" version="0.0.6" />
			</div>
			<div class="space-y-1">
				<DownloadLink fileName="#" version="0.0.5" />
				<DownloadLink fileName="#" version="0.0.4" />
				<DownloadLink fileName="#" version="0.0.3" />
				<DownloadLink fileName="#" version="0.0.2" />
			</div>
			<div class="space-y-1">
				<DownloadLink fileName="#" version="0.0.1" />
			</div>
		</div>
	</div>
</section>
